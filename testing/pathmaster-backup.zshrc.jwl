PERL5LIB="/home/jwl/perl5/lib/perl5${PERL5LIB:+:${PERL5LIB}}"; export PERL5LIB;
PERL_LOCAL_LIB_ROOT="/home/jwl/perl5${PERL_LOCAL_LIB_ROOT:+:${PERL_LOCAL_LIB_ROOT}}"; export PERL_LOCAL_LIB_ROOT;
PERL_MB_OPT="--install_base \"/home/jwl/perl5\""; export PERL_MB_OPT;
PERL_MM_OPT="INSTALL_BASE=/home/jwl/perl5"; export PERL_MM_OPT;

alias luamake=/home/jwl/Applications/lua-language-server/3rd/luamake/luamake

source /home/jwl/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

export TSTRUCT_TOKEN="tstruct_"
export TSTRUCT_TOKEN="tstruct_"
export TSTRUCT_TOKEN="tstruct_"
export TSTRUCT_TOKEN="tstruct_"
